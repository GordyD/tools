    export PORT=9119
    export SERVICE_NAME=message-api-local
    export USER_API_SERVICE=user-api-local
    export SALT_DEPLOY=JPX9TAh6VEcta4TnaQMudx4R1G6ie9Wi
    export SERVER_NAME=message-api

